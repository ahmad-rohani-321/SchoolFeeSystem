            <MudButton Class="bahij-nassim-regular" Color="Color.Error" Variant="Variant.Filled" OnClick="Cancel">لغوه</MudButton>
            <MudButton Class="bahij-nassim-regular" Color="Color.Primary" Variant="Variant.Filled" OnClick="Submit">ثبت</MudButton>
