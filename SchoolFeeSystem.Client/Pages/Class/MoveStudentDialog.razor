<MudRTLProvider RightToLeft>
    <MudDialog>
        <DialogContent>
            <MudLocalizedTextField Label="آيډي" ReadOnly />
            <MudLocalizedTextField Label="نوم" ReadOnly />
            <MudLocalizedTextField Label="د پلار نوم" ReadOnly />
            <MudLocalizedTextField Label="اوسنۍ ټولګۍ" ReadOnly />
            <MudLocalizedSelect>
                <MudSelectItem Value="1">لومړۍ ټولګۍ</MudSelectItem>
                <MudSelectItem Value="2">دوهم ټولګۍ</MudSelectItem>
                <MudSelectItem Value="3">درېیم ټولګۍ</MudSelectItem>
                <MudSelectItem Value="4">څلورم ټولګۍ</MudSelectItem>
            </MudLocalizedSelect>
