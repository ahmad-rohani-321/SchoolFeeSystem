<MudRTLProvider RightToLeft >
    <MudDialog>
        <DialogContent>
            <MudLocalizedTextField Label="آيډي" ReadOnly />
            <MudLocalizedTextField Label="نوم" ReadOnly />
            <MudLocalizedTextField Label="د پلار نوم" ReadOnly />
            <MudLocalizedNumericField Label="فیس مبلغ" />
        </DialogContent>
        <DialogActions>
            <MudButton Class="bahij-nassim-regular" Color="Color.Error" Variant="Variant.Filled" OnClick="Cancel">لغوه</MudButton>
            <MudButton Class="bahij-nassim-regular" Color="Color.Primary" Variant="Variant.Filled" OnClick="Submit">ثبت</MudButton>
        </DialogActions>
    </MudDialog>
</MudRTLProvider>
@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }
    [Parameter]
    public int? StudentId { get; set; }
    void Submit() => MudDialog?.Close(DialogResult.Ok(true));
    void Cancel() => MudDialog?.Cancel();
}